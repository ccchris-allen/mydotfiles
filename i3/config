# !Changing from WIN key to ALT
set $mod Mod1

# CTA
gaps inner 3
gaps outer 3

# allow for mod+m to move workspace to other monitor
bindsym $mod+m move workspace to output left

bindsym $mod+n exec --no-startup-ip i3-input -F 'rename workspace to %s"' -P 'New name: '
bindsym $mod+b border toggle
# set wallpaper color
exec --no-startup-id xsetroot -solid "#ff7722"
hide_edge_borders both
for_window [class="^.*"] border pixel 4
# lock with winkey+l
bindsym Mod4+l exec i3lock
# exit with winkey+e
bindsym Mod4+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# now using urxvt
bindsym $mod+Return exec urxvt

#trying to do sound here
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 10%+ unmute
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 10%- unmute
bindsym XF86AudioMute exec amixer -D pulse sset Master toggle

# Generally, should use something like XF86MonBrightnessUp,
# but doesnt seem to work on this machine
bindsym $mod+F6 exec xbacklight -inc 10
bindsym $mod+F5 exec xbacklight -dec 10

# This is a slight hack to prompt on closing window
set $close "Close the window? (y/n)"

mode $close {
    bindsym y kill, mode default
    bindsym Return kill, mode default

    bindsym n mode default
    bindsym Escape mode default
}

bindsym $mod+d mode $close

