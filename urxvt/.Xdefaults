URxvt.background: #181818
URxvt.foreground: #EBDBB2

URxvt.cursorColor           : #FFFF87
URxvt.pointerColorBackground: #586E75
URxvt.pointerColorForeground: #93A1A1

! hard contrast: *background: #1d2021
URxvt.background: #282828
! soft contrast: *background: #32302f
URxvt.foreground: #ebdbb2
! Black + DarkGrey
URxvt.color0:  #282828
URxvt.color8:  #928374
! DarkRed + Red
URxvt.color1:  #cc241d
URxvt.color9:  #fb4934
! DarkGreen + Green
URxvt.color2:  #98971a
URxvt.color10: #b8bb26
! DarkYellow + Yellow
URxvt.color3:  #d79921
URxvt.color11: #fabd2f
! DarkBlue + Blue
URxvt.color4:  #458588
URxvt.color12: #83a598
! DarkMagenta + Magenta
URxvt.color5:  #b16286
URxvt.color13: #d3869b
! DarkCyan + Cyan
URxvt.color6:  #689d6a
URxvt.color14: #8ec07c
! LightGrey + White
URxvt.color7:  #a89984
URxvt.color15: #ebdbb2

! change font size
URxvt.keysym.C-minus: perl:font-size:decrease
URxvt.keysym.c-equal: perl:font-size:increase

! Code to get copying/pasting to work (??)

! xterm settings
XTerm*font: Meslo LG M DZ for Powerline
XTerm*utf8: always

! urxvt settings
urxvt*borderless: true
urxvt*scrollBar: false
urxvt*scrollTtyOutput:  true
urxvt*scrollTtyKeypress:  true
urxvt*buffered: true
urxvt*jumpScroll: true
urxvt*skipScroll: false

URxvt.font: xft: Meslo LG S DZ for Powerline:size=9
urxvt.boldfont: xft:Meslo LG S DZ:regular:size=11

URxvt.letterSpace:          -1

! Xft settings
Xft.lcdfilter:  lcdlight
Xft.dpi: 124x125
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hinstyle: hintslight

Xcursor.theme: Lambda
